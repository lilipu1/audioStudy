<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_start_record"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="开始录音"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:button_stop_record"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="停止录音"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:play_static_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="STATIC模式播放"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:pause_static_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="STATIC模式暂停"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:stop_static_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="STATIC模式停止"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:play_stream_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="STREAM模式播放"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:pause_stream_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="暂停STREAM模式"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:stop_stream_mode"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="停止STREAM模式"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:play_player"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Player播放"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

    <Button
        ohos:id="$+id:stop_play_player"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Player停止"
        ohos:text_size="50"
        ohos:top_margin="30vp"/>

</DirectionalLayout>